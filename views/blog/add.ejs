<div>
  <form class="form-horizontal" role="form" action="/blog/create" method="POST">
    <div class="form-group">
      <div class="col-sm-12">
        <textarea type="text" class="form-control" name="blogTitle" placeholder="Enter blog title", required></textarea>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">          
        <textarea rows=10 type="text" class="form-control" name="blogBody" placeholder="Enter blog body", required></textarea>
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-4 pull-right">
        <button type="submit" class="btn btn-default btn-md btn-block" style="background-color: #eeeeee"> Blog </button>
      </div>
    </div>
  </form>
</div>


